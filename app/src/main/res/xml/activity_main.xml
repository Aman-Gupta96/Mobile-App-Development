<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDonorRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor Registration"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnRequestBlood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Blood"
        android:layout_below="@id/btnDonorRegistration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnManageInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Inventory"
        android:layout_below="@id/btnRequestBlood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>